#!/bin/bash
set -e

function frame () {
    echo "frame-$*"
    time eval "frame-$*"
}

frame read\
    --in ooo/perlcritic.log\
    --dir ooo
frame make-graph\
    --dir ooo
frame deparent\
    --graph $1.graph\
    --dag $1.dag

