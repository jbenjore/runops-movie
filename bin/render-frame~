#!/bin/bash
set -e

DIR=$1
IN=$2
OUT=$3

function frame () {
    echo "frame-$*"
    time eval "/opt/perl/bin/perl frame-$*"
}

frame read       --dir $DIR --in $IN
frame make-graph --dir $DIR
frame deparent   --dir $DIR
frame redge      --dir $DIR
frame sum-size   --dir $DIR
frame names      --dir $DIR
frame png        --dir $DIR --png $OUT
#open $OUT